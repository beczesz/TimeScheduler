<resources>

    <!--
    ****************************************
    * Text Styles
    ****************************************
    -->
    <!-- Text -->

    <style name="Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:paddingTop">@dimen/material_component_dialogs_padding_between_title_and_body_text</item>
        <item name="android:paddingBottom">@dimen/material_component_dialogs_padding_between_title_and_body_text</item>
    </style>

    <style name="Title.Subject" parent="TextAppearance.AppCompat.Title">
        <item name="android:paddingTop">@dimen/material_component_cards_space_between_cards</item>
    </style>


    <style name="Title.OneLine" parent="Title">
        <item name="android:ellipsize">marquee</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="Body1" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/textColorSecondary</item>
    </style>

    <style name="RecipientsSpan" parent="Body1">
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textColorLink">@color/textColorSecondary</item>
    </style>

    <style name="Body2" parent="TextAppearance.AppCompat.Body2">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Caption" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">@color/textColorSecondary</item>
    </style>

    <style name="Caption.Centered" parent="Caption">
        <item name="android:textColor">@color/textColorSecondary</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Caption.Devel" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">@color/devel</item>
    </style>

    <style name="Caption.Accent" parent="Caption">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="Caption.Accent.Slim" parent="Caption">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="Caption.White" parent="Caption">
        <item name="android:textColor">@color/md_white_1000</item>
    </style>



    <style name="Display1" parent="TextAppearance.AppCompat.Display1"/>

    <style name="Display2" parent="TextAppearance.AppCompat.Display2"/>

    <style name="Display3" parent="TextAppearance.AppCompat.Display3"/>

    <style name="Display4" parent="TextAppearance.AppCompat.Display4"/>

    <style name="Headline" parent="TextAppearance.AppCompat.Headline">
    </style>


       <!-- Icons -->
    <style name="Icon">
        <item name="android:textColor">@drawable/icon_color</item>
        <item name="android:textSize">@dimen/material_typography_subheading</item>
        <item name="android:paddingLeft">@dimen/material_component_lists_icon_left_padding</item>
        <item name="android:paddingRight">@dimen/material_component_lists_icon_left_padding</item>
        <item name="android:gravity">center</item>
        <item name="android:background">?selectableItemBackgroundBorderless</item>
    </style>

    <style name="Icon.NoPadding" parent="Icon">
        <item name="android:padding">@dimen/padding_tiny</item>
    </style>

    <style name="Icon.NormalTouch" parent="Icon">
        <item name="android:paddingLeft">@dimen/padding_default</item>
        <item name="android:paddingRight">@dimen/padding_default</item>
    </style>

    <style name="Icon.MessageActions" parent="Icon">
        <item name="android:textSize">@dimen/material_typography_headline</item>
        <item name="android:padding">@dimen/padding_default</item>
    </style>

    <style name="Icon.Toolbar">
        <item name="android:textColor">@color/textColorPrimaryInverse</item>
        <item name="android:textSize">@dimen/material_typography_headline</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="Icon.Medium" parent="Icon">
        <item name="android:textSize">@dimen/material_typography_headline</item>
    </style>


    <style name="Icon.Large" parent="Icon">
        <item name="android:textSize">@dimen/material_typography_display1</item>
    </style>

    <style name="Icon.XLarge" parent="Icon">
        <item name="android:textSize">@dimen/material_typography_display2</item>
    </style>

    <style name="Icon.XXLarge" parent="Icon">
        <item name="android:textSize">@dimen/material_typography_display3</item>
    </style>

    <style name="Icon.XXXLarge" parent="Icon">
        <item name="android:textSize">@dimen/material_typography_display4</item>
    </style>

    <style name="Icon.Info" parent="Icon">
        <item name="android:textColor">@color/info</item>
    </style>

    <style name="Icon.Error" parent="Icon">
        <item name="android:textColor">@color/error</item>
    </style>

    <style name="Icon.Devel" parent="Icon">
        <item name="android:textColor">@color/devel</item>
    </style>

    <style name="Icon.Success" parent="Icon">
        <item name="android:textColor">@color/success</item>
    </style>


</resources>
